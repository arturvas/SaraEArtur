---
import { weddingData } from '../../data/wedding-data.js';
import { formatWeddingDate } from '../../utils/date-utils.js';
import Button from '../ui/Button.astro';

const formattedDate = formatWeddingDate(weddingData.date);
---

<section
  id="inicio"
  class="relative h-screen flex flex-col bg-gradient-to-br from-slate-50 via-blue-50 to-slate-100 pt-16 overflow-hidden"
>
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-30">
    <div class="absolute top-20 left-10 w-64 h-64 bg-blue-200 rounded-full blur-3xl"></div>
    <div class="absolute bottom-32 right-16 w-80 h-80 bg-slate-200 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 left-1/3 w-48 h-48 bg-white rounded-full blur-2xl"></div>
  </div>

  <!-- Floating Hearts Animation -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div class="absolute top-[25%] left-1/6 animate-pulse">
      <svg class="w-4 h-4 text-pink-300 opacity-60" fill="currentColor" viewBox="0 0 24 24">
        <path
          d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"
        ></path>
      </svg>
    </div>
    <div class="absolute top-[37%] right-[20%] animate-pulse delay-1000">
      <svg class="w-3 h-3 text-blue-300 opacity-50" fill="currentColor" viewBox="0 0 24 24">
        <path
          d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"
        ></path>
      </svg>
    </div>
    <div class="absolute bottom-[55%] left-1/5 animate-pulse delay-2000">
      <svg class="w-5 h-5 text-slate-300 opacity-40" fill="currentColor" viewBox="0 0 24 24">
        <path
          d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"
        ></path>
      </svg>
    </div>
  </div>

  <div class="flex-grow flex items-center justify-center relative z-10 -mt-16">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- Decorative Top Element -->
      <div class="mb-8">
        <div class="flex items-center justify-center space-x-4">
          <div class="h-px bg-slate-300 flex-1 max-w-24"></div>
          <svg class="w-8 h-8 text-slate-400" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"
            ></path>
          </svg>
          <div class="h-px bg-slate-300 flex-1 max-w-24"></div>
        </div>
      </div>

      <!-- Main Title -->
      <h1
        class="heading-script text-6xl sm:text-7xl md:text-7xl lg:text-8xl text-slate-700 mb-6 leading-tight"
      >
        {weddingData.couple.bride}
        <span class="text-slate-500">&</span>
        {weddingData.couple.groom}
      </h1>

      <!-- Subtitle -->
      <div class="mb-10">
        <p class="text-2xl md:text-3xl text-slate-600 mb-4">Vamos nos casar!</p>
      </div>

      <!-- Date Display -->
      <div class="flex items-center justify-center mb-12">
        <div
          class="bg-gradient-to-r from-white to-blue-50 rounded-2xl shadow-xl px-8 py-6 border-2 border-blue-200 backdrop-blur-sm"
        >
          <div class="flex items-center justify-center text-slate-700">
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4">
              <svg
                class="w-6 h-6 text-slate-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <div class="text-left">
              <p class="text-sm text-slate-500 uppercase tracking-wider">Save the Date</p>
              <p class="text-2xl font-bold text-slate-700">{formattedDate}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- CTA Buttons -->
      <div
        class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-6 mb-16"
      >
        <Button href="#presentes" variant="primary" size="lg" class="">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"
            ></path>
          </svg>
          Ver Lista de Presentes
        </Button>
      </div>

      <!-- Scroll Indicator -->
      <div class="absolute bottom-24 sm:bottom-12 left-0 right-0 text-center">
        <div class="animate-bounce flex items-center justify-center mx-auto mb-2">
            <svg
              class="w-10 h-10 text-slate-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path d="M12 5v14"></path>
              <path d="m19 12-7 7-7-7"></path>
            </svg>
        </div>
        <p class="text-slate-500 text-sm">Deslize para baixo</p>
      </div>
    </div>
  </div>
</section>
