---
import { weddingData } from '../../data/wedding-data.js';
import Card from '../ui/Card.astro';
---

<section id="dress-code" class="py-20 bg-slate-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Title -->
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-semibold text-slate-700 mb-6">
                {weddingData.dressCode.title}
            </h2>
            <p class="text-lg text-slate-600 max-w-3xl mx-auto leading-relaxed">
                {weddingData.dressCode.description}
            </p>
        </div>

        <!-- Dress Code Grid -->
        <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
            <!-- For Men -->
            <Card>
                <div class="text-center">
                    <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-6">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="w-8 h-8 text-slate-600 lucide lucide-user-icon lucide-user"
                            ><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"
                            ></circle></svg
                        >
                    </div>
                    <h3 class="text-2xl font-semibold text-slate-700 mb-6">Para Homens</h3>

                    <div class="text-left space-y-2 mb-6">
                        {weddingData.dressCode.men.items.map((item) => <p class="text-slate-600">{item}</p>)}
                    </div>

                    <div class="bg-slate-100 rounded-lg p-4">
                        <h4 class="font-semibold text-slate-700 mb-2">Atenção as cores</h4>
                        <p class="text-sm text-slate-600 leading-relaxed">
                            Qualquer cor <strong>exceto</strong>
                            <span class="font-bold bg-slate-400 text-white px-1.5 py-0.3 rounded">cinza</span> reservado
                            para o noivo e <span class="font-bold bg-blue-900 text-white px-1.5 py-0.3 rounded"
                                >azul marinho</span
                            > reservado para os padrinhos.
                        </p>
                    </div>
                </div>
            </Card>

            <!-- For Women -->
            <Card>
                <div class="text-center">
                    <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-6">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="w-8 h-8 text-slate-600 lucide lucide-flower2-icon lucide-flower-2"
                            ><path
                                d="M12 5a3 3 0 1 1 3 3m-3-3a3 3 0 1 0-3 3m3-3v1M9 8a3 3 0 1 0 3 3M9 8h1m5 0a3 3 0 1 1-3 3m3-3h-1m-2 3v-1"
                            ></path><circle cx="12" cy="8" r="2"></circle><path d="M12 10v12"></path><path
                                d="M12 22c4.2 0 7-1.667 7-5-4.2 0-7 1.667-7 5Z"></path><path
                                d="M12 22c-4.2 0-7-1.667-7-5 4.2 0 7 1.667 7 5Z"></path></svg
                        >
                    </div>
                    <h3 class="text-2xl font-semibold text-slate-700 mb-6">Para Mulheres</h3>

                    <div class="text-left space-y-2 mb-6">
                        {weddingData.dressCode.women.items.map((item) => <p class="text-slate-600">{item}</p>)}
                    </div>

                    <div class="bg-slate-100 rounded-lg p-4">
                        <h4 class="font-semibold text-slate-700 mb-2">Atenção as cores</h4>
                        <p class="text-sm text-slate-600 leading-relaxed">
                            Qualquer cor <strong>exceto</strong>
                            <span class="font-bold bg-white px-1.5 py-0.3 rounded">branco</span> reservado para a noiva e
                            <span class="font-bold bg-sky-200 text-sky-900 px-1.5 py-0.3 rounded">azul serenity</span> reservado
                            para as madrinhas.
                        </p>
                    </div>
                </div>
            </Card>
        </div>
    </div>
</section>
